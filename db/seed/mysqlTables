CREATE DATABASE GENPROCSQL;
USE GENPROCSQL;
CREATE TABLE DCS_M_PROJECT (
    PROJECT_ID INT AUTO_INCREMENT PRIMARY KEY,
    PROJECT_NAME VARCHAR(255) NOT NULL,
    Language_ID INT NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser VARCHAR(100) NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL,
    FOREIGN KEY (Language_ID) REFERENCES DCS_M_LANGUAGE(Language_ID)
) ENGINE=InnoDB;

CREATE TABLE DCS_M_MODULE (
    MODULE_ID INT AUTO_INCREMENT PRIMARY KEY,
    PROJECT_ID INT NOT NULL,
    MODULE_DES VARCHAR(255) NULL,
    MODULE_NAME VARCHAR(255) NOT NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser VARCHAR(100) NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL,
    FOREIGN KEY (PROJECT_ID) REFERENCES DCS_M_PROJECT(PROJECT_ID)
) ENGINE=InnoDB;

CREATE TABLE DCS_M_LANGUAGE (
    Language_ID INT AUTO_INCREMENT PRIMARY KEY,
    Language_Name VARCHAR(50) NOT NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser INT NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NOT NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL
) ENGINE=InnoDB;

CREATE TABLE DCS_M_DB_CONNECTION (
    DB_CONNECTION_ID INT AUTO_INCREMENT PRIMARY KEY,
    DB_NAME TEXT NULL,
    SERVER_NAME VARCHAR(255) NOT NULL,
    USER_NAME VARCHAR(100) NOT NULL,
    PASSWORD VARCHAR(255) NOT NULL,
    PROJECT_ID INT NOT NULL,
    COMPANY_NAME VARCHAR(255) NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser INT NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser VARCHAR(100) NULL,
    C2C_Status BOOLEAN NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL,
    FOREIGN KEY (PROJECT_ID) REFERENCES DCS_M_PROJECT(PROJECT_ID)
) ENGINE=InnoDB;

CREATE TABLE DCM_M_ERR_MESSAGE (
    ERROR_ID INT AUTO_INCREMENT PRIMARY KEY,
    ERROR_PREFIX_ID VARCHAR(12) NULL,
    ERROR_MSG VARCHAR(255) NULL,
    ERROR_CODE VARCHAR(20) NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser VARCHAR(100) NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL
) ENGINE=InnoDB;

CREATE TABLE DCS_M_LIST_OF_VALUES (
    LOV_ID INT AUTO_INCREMENT PRIMARY KEY,
    LOV_NAME VARCHAR(200) NOT NULL UNIQUE,         -- e.g., 'Gender', 'User Role'
    LOV_DESCRIPTION VARCHAR(255) NULL,             -- Optional description
    C2C_Cdate DATETIME NULL,
    C2C_Cuser INT NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NOT NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL
) ENGINE=InnoDB;

CREATE TABLE DCS_M_LIST_OF_VALUES_DETAILS (
    LOV_DET_ID INT AUTO_INCREMENT PRIMARY KEY,
    LOV_ID INT NOT NULL,                            -- FK â†’ DCS_M_LIST_OF_VALUES
    LOV_DET_NAME VARCHAR(200) NOT NULL,             -- e.g., 'Male', 'Female'
    LOV_DET_DESCP VARCHAR(500) NULL,                -- Optional description
    C2C_Cdate DATETIME NULL,
    C2C_Cuser INT NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NOT NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL,
    FOREIGN KEY (LOV_ID) REFERENCES DCS_M_LIST_OF_VALUES(LOV_ID)
        ON DELETE CASCADE
        ON UPDATE CASCADE
) ENGINE=InnoDB;

CREATE TABLE DCS_L_USER_PROJECT (
    User_Project_ID INT AUTO_INCREMENT PRIMARY KEY,
    User_ID INT NOT NULL,
    Project_ID INT NOT NULL,
    C2C_Cdate DATETIME NULL,
    C2C_Cuser INT NULL,
    C2C_Udate DATETIME NULL,
    C2C_Uuser INT NULL,
    C2C_Status BOOLEAN NOT NULL,
    C2C_Inactive_Reason VARCHAR(500) NULL,
    CONSTRAINT FK_DCS_M_USER_PROJECT_PROJECT FOREIGN KEY (Project_ID) REFERENCES DCS_M_PROJECT (PROJECT_ID)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;
